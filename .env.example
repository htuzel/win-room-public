# Win Room v2.0 - Environment Variables Example
# Copy this file to .env and fill in your actual values

# ========================================
# DATABASE CONFIGURATION
# ========================================
# Option 1: Use individual parameters
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# Option 2: Or use a connection string (overrides above)
# DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# USD/TRY Exchange Rate Fallback (used if database lookup fails)
USD_TRY_RATE=42

# ========================================
# JWT AUTHENTICATION
# ========================================
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=7d

# ========================================
# SOCKET.IO SERVER
# ========================================
SOCKET_PORT=3001
SOCKET_CORS_ORIGIN=http://localhost:3000

# ========================================
# POLLER WORKER
# ========================================
# How often to poll for new subscriptions (milliseconds)
POLLER_INTERVAL_MS=2000
# Maximum subscriptions to process per batch
POLLER_BATCH_SIZE=500
# How often to check team revenue milestones (minutes)
TEAM_REVENUE_CHECK_INTERVAL_MINUTES=15
# How often to check personal revenue milestones (minutes)
PERSONAL_REVENUE_CHECK_INTERVAL_MINUTES=15

# ========================================
# NEXT.JS FRONTEND
# ========================================
# Public environment variables (accessible in browser)
NEXT_PUBLIC_SOCKET_URL=http://localhost:3001

# Node environment
NODE_ENV=development

# ========================================
# SSL/TLS (for DigitalOcean or other managed databases)
# ========================================
# Set to '0' in development to accept self-signed certificates
# Remove or set to '1' in production
NODE_TLS_REJECT_UNAUTHORIZED=0
